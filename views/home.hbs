<html lang='es'>
	<head>
		<meta charset='utf-8' />
		<meta name='viewport' content='width=device-width, initial-scale=1' />
		<link
			href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css'
			rel='stylesheet'
			integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx'
			crossorigin='anonymous'
		/>
		<title>Desafío 11</title>
	</head>
	<body>
		<h1>Desafío 11</h1>
		<h2 class="mt-5 ms-5">Ingreso de usuario</h2>
		<div class='container mt-5'>
			<div class='row'>

				<div class='col-6'>
					<form action='/login' method='post'>
						<label>Email</label>
						<input type='email' name='username' placeholder='Ingrese su email' class='form-control' required />
						<label>Contraseña</label>
						<input type='password' name='password' placeholder='Ingrese su contraseña' class='form-control' required />
						<input type='submit' value='ENTRAR' class='btn btn-primary mt-5' />
						<h4 class="mt-5">{{msg}}</h4>
					</form>
				</div>
				<div class='col-6 ps-5'>
					 <h3>Registrarse</h3>
                    <a href="/register">
					<button class='btn btn-dark'>REGISTRARSE</button>
                    </a> 
				</div>
			</div>
		</div>

		<script
			src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js'
			integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa'
			crossorigin='anonymous'
		></script>
	</body>
</html>